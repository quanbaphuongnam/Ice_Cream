<div class="zoom-anim-dialog mfp-hide" id="contact">
    <form  method="post"  asp-controller="recipe" asp-action="postrecipe" enctype="multipart/form-data" id="contactform" class="contact-form">
        <div class="cd-popup-container" style="">
            <p style="">
                <a href="" class="cd-popup-close cd-close-button">
                    <i class="fa fa-times" style="pointer-events:none;"></i>
                </a>
            </p>
            <h4 style="text-align:left; "> <strong>Recipe Name</strong> </h4>
            <div class="name">

                <input class="input" type="text" asp-for="Formula.ForName"   />
            </div>

            <div class="message">
                <h4 style="text-align:left; "> <strong>Recipe Detail</strong> </h4>
                <textarea  type="text" asp-for="Formula.ForDescription" ></textarea>
            </div>

            <div class="message">
                <h4 style="text-align:left; "> <strong>Recipe Cover</strong> </h4>
                <input style="padding: 0px 0px 8px 0px !important;" type="file" name="filecover"  />
            </div>
          
            <input hidden type="number" asp-for="Formula.ForContributors" value="@HttpContextAccessor.HttpContext.Session.GetInt32("account")" />

          
            <br>
            <div style="text-align:left">
                <h4 style="text-align:left; "> <strong>Recipe Cover</strong> </h4>
                <input type="checkbox" id="human" name="human" />
                <label for="human">I am a human and not a robot.</label>
            </div>
            <br>
            <div class="submit">
                <p class="user-message">We will review your formula as soon as possible!</p>
                <input type="submit"  value="Send" class='show-example-btn'  />
            </div>
        </div>
    </form>
</div>


