@model IceCream.Models.Book
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/SharedAdmin/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">BOOK EDIT</h1>
            </div>

            <hr />

            <div class="row">
                <div class="col-md-4">
                    <form asp-action="edit" asp-controller="quanlybook" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        @foreach (var books in ViewBag.quanLybook)
                        {
                            <div class="form-group">
                                <label asp-for="BookId" class="control-label"></label>
                                <input asp-for="BookId" class="form-control" value="@books.BookId" />
                                <span asp-validation-for="BookId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <h4 style="text-align:left; "> BookPhoto </h4>
                                <input style="padding: 0px 0px 8px 0px !important;" type="file" name="file" />
                                <td><img src="~/img/books/@books.BookPhoto" width="100" height="160" alt=""></td>
                            </div>
                            <div class="form-group">
                                <label asp-for="BookName" class="control-label"></label>
                                <input asp-for="BookName" class="form-control" />
                                <span asp-validation-for="BookName" class="text-danger"> </span>
                            </div>
                            <div class="form-group">
                                <label asp-for="BookDescription" class="control-label"></label>
                                <input asp-for="BookDescription" class="form-control" />
                                <span asp-validation-for="BookDescription" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="BookPrice" class="control-label"></label>
                                <input asp-for="BookPrice" class="form-control" />
                                <span asp-validation-for="BookPrice" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="BookQuantity" class="control-label"></label>
                                <input asp-for="BookQuantity" class="form-control" />
                                <span asp-validation-for="BookQuantity" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="BookYear" class="control-label"></label>
                                <input asp-for="BookYear" class="form-control" />
                                <span asp-validation-for="BookYear" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="BookCreated" class="control-label"></label>
                                <input asp-for="BookCreated" class="form-control" />
                                <span asp-validation-for="BookCreated" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="BookUpdate" class="control-label"></label>
                                <input asp-for="BookUpdate" class="form-control" />
                                <span asp-validation-for="BookUpdate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="BookStatus" class="control-label"></label>
                                <input asp-for="BookStatus" class="form-control" />
                                <span asp-validation-for="BookStatus" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        }

                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>

        </div>
    </div>
</div>