@model IceCream.Models.Book
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/SharedAdmin/_LayoutAdmin.cshtml";
}
<div id="wrapper">



    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Add Recipe</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Add Book
                        </div>
                        <div class="panel-body">
                            <div class="row">

                                <div class="col-lg-6">
                                    <form method="post" asp-controller="quanlybook" asp-action="add" enctype="multipart/form-data" role="form">

                                        <div class="form-group">
                                            <label>Name Book</label>
                                            <input type="text" asp-for="BookName" class="form-control" placeholder="Enter name recipe">
                                        </div>
                                        <div class="form-group">
                                            <label>Choose cover photo</label>
                                            <input type="file" name="file">
                                            <img src="" id="preview" height="400" width="400" />
                                        </div>

                                        <div class="form-group">
                                            <label>Price</label>
                                            <input type="text" asp-for="BookPrice" class="form-control" placeholder="Enter price">
                                        </div>
                                        <div class="form-group">
                                            <label>Price</label>
                                            <input type="text" asp-for="BookPrice" class="form-control" placeholder="Enter price">
                                        </div>
                                        <div class="form-group">
                                            <label>Quantity</label>
                                            <input type="number" asp-for="BookQuantity" class="form-control" placeholder="Enter quantity">
                                        </div>
                                        <div class="form-group">
                                            <label>Year</label>
                                            <input type="text" asp-for="BookYear" class="form-control" placeholder="Enter year">
                                        </div>
                                        <div class="form-group">
                                            <label>Choose status</label>
                                            <div class="radio">
                                                <label>
                                                    <input type="radio" asp-for="BookStatus" name="optionsRadios1" id="optionsRadios1" value="0" checked>Not Activated
                                                </label>
                                            </div>
                                            <div class="radio">
                                                <label>
                                                    <input type="radio" asp-for="BookStatus" name="optionsRadios1" id="optionsRadios2" value="1">Activated
                                                </label>
                                            </div>

                                        </div>


                                        <div class="form-group">
                                            <label>Description</label>
                                            <textarea type="text" asp-for="BookDescription" class="form-control" rows="9"></textarea>
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-default">Submit Button</button>
                                            <button type="reset" class="btn btn-default">Reset Button</button>
                                        </div>

                                        @*@HttpContextAccessor.HttpContext.Session.GetInt32(" account")*@
                                    </form>
                                </div>
                                <div class="col-lg-6">


                                </div>
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->

</div>
<script>
    $(document).ready(function () {

        $('#imageFile').change(function (evt) {

            var files = evt.target.files;
            var file = files[0];

            if (file) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('preview').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    });</script>
