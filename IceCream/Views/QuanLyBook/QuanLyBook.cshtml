
@{
    ViewData["Title"] = "QuanLyBook";
    Layout = "~/Views/SharedAdmin/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Tables</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <a asp-controller="quanlybook" asp-action="quanlybook"> QuanLyBook</a>

                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>BookId</th>
                                        <th>BookPhoto</th>
                                        <th>BookName</th>
                                        <th>BookDescription</th>
                                        <th>BookPrice</th>
                                        <th>BookQuantity</th>
                                        <th>BookYear</th>
                                        <th>BookCreated</th>
                                        <th>BookStatus</th>
                                        <th>Update</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var quanlybook in ViewBag.quanlybooks)
                                    {
                                        <tr class="odd gradeX">
                                            <td>@quanlybook.BookId</td>
                                            <td><img src="~/img/books/@quanlybook.BookPhoto" width="100" height="160" alt=""></td>
                                            <td>@quanlybook.BookName</td>
                                            <td>@quanlybook.BookDescription</td>
                                            <td>@quanlybook.BookPrice$</td>
                                            <td>@quanlybook.BookQuantity</td>
                                            <td>@quanlybook.BookYear</td>
                                            <td>@quanlybook.BookCreated.ToString(string.Format("dd/MM/yyyy")) </td>
                                            <td>@quanlybook.BookStatus</td>
                                            <td><a asp-controller="quanlybook" asp-action="edit" asp-route-id="@quanlybook.BookId"> Update</a></td>
                                            <td>@quanlybook.BookStatus</td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->

                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>

    </div>
</div>
