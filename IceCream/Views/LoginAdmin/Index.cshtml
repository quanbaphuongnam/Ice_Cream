@model IceCream.Models.Account
@using Microsoft.AspNetCore.Http;
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
@inject IHttpContextAccessor HttpContextAccessor

@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin</title>
    <link rel="stylesheet" href="~/JS/bootstrap.min.css">
    <link rel="short icon" href="~/Images/favicon.ico" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />
    <link href="~/Admin/css/StyleForm.css" rel="stylesheet" />
</head>
<body>
    <div class="login">
        <h1>Login</h1>
        <form method="post" asp-controller="loginAdmin" asp-action="login">
            <input type="text" name="username" placeholder="Username" required="required" />
            <input type="password" name="password" placeholder="Password" required="required" />
            <button type="submit" class="btn btn-primary btn-block btn-large">Let me in.</button>
        </form>
        @if (@HttpContextAccessor.HttpContext.Session.GetString("msg") == "f")
        {
            <script type="text/javascript">
                Swal.fire({

                    icon: 'error',
                    title: 'Login Fail',
                    text: ' Incorrect username or password',
                    showConfirmButton: false,
                    timer: 2000
                })
            </script>
            HttpContextAccessor.HttpContext.Session.Remove("msg");
        }
    </div>
</body>
</html>
