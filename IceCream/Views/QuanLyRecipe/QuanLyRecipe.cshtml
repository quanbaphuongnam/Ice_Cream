@model IceCream.Models.Formula
@using Microsoft.AspNetCore.Http;

@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "QuanLyRecipe";
    Layout = "~/Views/SharedAdmin/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">  QuanLyRecipe</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">

                        <a asp-controller="quanlyrecipe" asp-action="addrecipe" class="btn btn-danger">AddRecipe</a>
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive" style="height: 800px; overflow: auto;">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>ForId</th>
                                        <th>ForCover</th>
                                        <th>ForName</th>
                                        <th>ForDescription</th>
                                        <th>ForContributors</th>
                                        <th>ForCondition</th>
                                        <th>ForStatus</th>
                                        <th>ForCreated</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var fomula in ViewBag.fomula)
                                    {
                                        <tr class="odd gradeX">
                                            <td>@fomula.ForId</td>
                                            <td>
                                                <img src="~/img/recipe/@fomula.ForCover" width="100" height="100" alt="">
                                            </td>
                                            <td>@fomula.ForName</td>
                                            <td><div style=" height: 100px; width: 250px;  overflow: auto;">@fomula.ForDescription </div></td>
                                            <td>@fomula.AccUsername</td>
                                            <td>@fomula.ForCondition</td>
                                            <td>
                                                @if (fomula.ForStatus == 1)
                                                {
                                                    <p> approved </p>
                                                }
                                                else
                                                { <a asp-controller="quanlyrecipe" asp-action="activerecipe" asp-route-id="@fomula.ForId" class="btn btn-success ">approve</a>}
</td>
                                            <td class="center">@fomula.ForCreated.ToString(string.Format("dd/MM/yyyy")) </td>
                                            <td><a asp-controller="quanlyrecipe" asp-action="updaterecipe" asp-route-id="@fomula.ForId" class="btn btn-warning btn-circle"><i class="fa fa-edit"></i></a> </td>
                                            <td><a asp-action="delete" asp-controller="quanlyrecipe" asp-route-id="@fomula.ForId" onclick="return confirm('Are u sure ?')" class="btn btn-danger btn-circle"><i class="fa fa-times"></i></a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->

                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>

    </div>
</div>



