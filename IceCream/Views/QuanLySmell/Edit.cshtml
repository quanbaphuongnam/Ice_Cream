@model IceCream.Models.Savour
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/SharedAdmin/_LayoutAdmin.cshtml";
}

<<div id="wrapper">



    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header"> Edit Savour</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Edit Savour
                        </div>
                        <div class="panel-body">
                            <div class="row">

                                <div class="col-lg-6">
                                    <form method="post" asp-controller="quanlysmell" asp-action="addrecipe" enctype="multipart/form-data" role="form">

                                        <div class="form-group">
                                            <label>IdHashTag</label>
                                            <input type="text" asp-for="HashtagId" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <h4 style="text-align:left; "> SaurPhoto </h4>
                                            @*<input style="padding: 0px 0px 8px 0px !important;" type="file" name="file"  />*@
                                            <input style="padding: 0px 0px 8px 0px !important;" id="imageFile" type="file" name="file" class="imageFile" accept="image/*">
                                            <td><img src="~/img/savour/@ViewBag.savour.SavPhoto" width="100" height="160" alt=""></td>
                                        </div>



                                        <div class="form-group">
                                            <label>Ingredients</label>
                                            <textarea type="text" asp-for="SavIngredients" value="@ViewBag.savour.SavIngredients" class="form-control" rows="5"></textarea>
                                        </div>

                                        <div class="form-group">
                                            <label>Procedure</label>
                                            <textarea type="text" asp-for="SavProcedure" class="form-control" rows="5"></textarea>
                                        </div>


                                        @*@HttpContextAccessor.HttpContext.Session.GetInt32(" account")*@
                                    </form>
                                </div>
                                <div class="col-lg-6">


                                </div>




                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->

</div>
<script>
    $(document).ready(function () {

        $('#imageFile').change(function (evt) {

            var files = evt.target.files;
            var file = files[0];

            if (file) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('preview').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    });</script>



