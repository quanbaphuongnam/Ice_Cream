
@{
    ViewData["Title"] = "QuanLySmell";
    Layout = "~/Views/SharedAdmin/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Tables</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <a asp-controller="quanlysmell" asp-action="add" class="btn btn-danger"> AddSavour</a>

                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive" style="height: 800px;  overflow: auto;">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>HashtagId</th>
                                        <th>SavName</th>
                                        <th>SavPhoto</th>
                                        <th>SavIngredients</th>
                                        <th>SavProcedure</th>
                                        <th>Edit</th>
                                        <th>Delete</th>


                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var savour in ViewBag.savours)
                                    {
                                        <tr class="odd gradeX">
                                            <td>@savour.HashtagId</td>
                                            <td>@savour.SavName</td>
                                            <td>
                                                <img src="~/img/savour/@savour.SavPhoto" width="150" height="150" alt="">
                                            </td>

                                            <td>@savour.SavIngredients</td>
                                            <td>@savour.SavProcedure</td>
                                            <td><a asp-controller="quanlysmell" asp-action="edit" asp-route-id="@savour.HashtagId" class="btn btn-warning btn-circle"><i class="fa fa-edit"></i> </a></td>
                                            <td><a asp-controller="quanlysmell" asp-action="delete" asp-route-id="@savour.HashtagId" onclick="return confirm('Are u sure ?')" class="btn btn-danger btn-circle"><i class="fa fa-times"></i> </a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->

                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>

    </div>
</div>

