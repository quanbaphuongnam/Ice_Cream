
@{
    ViewData["Title"] = "DetailInvoice";
    Layout = "~/Views/SharedAdmin/_LayoutAdmin.cshtml";
}

<div id="wrapper">



    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header" style="font-family:'Comic Sans MS'")">Invoice Detail</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Invoice Detail
                        </div>
                        <div class="panel-body">
                            <div class="row">

                                <div class="col-lg-6">
                                    <form enctype="multipart/form-data" role="form">

                                        <div class="form-group">
                                            <label>ID:</label>
                                            <input disabled type="text" class="form-control" value="@ViewBag.detail.Id">
                                            <br />
                                            <label>ID Invoice:</label>
                                            <input disabled type="text" class="form-control" value="@ViewBag.detail.InvId">
                                            <br />
                                            <label>ID Book:</label>
                                            <input disabled type="text" class="form-control" value="@ViewBag.detail.BookId">
                                            <br />
                                            <label>Name:</label>
                                            <input disabled type="text" class="form-control" value="@ViewBag.detail.ScName">
                                            <br />
                                            <label>Quantity:</label>
                                            <input disabled type="text" class="form-control" value="@ViewBag.detail.ScQuantity">
                                            <br />
                                            <label>Image:</label>
                                            <td><img src="~/img/books/@ViewBag.detail.ScPhoto" width="100" height="160" alt=""></td>
                                            <br />
                                            <label>Price:</label>
                                            <input disabled type="text" class="form-control" value="@ViewBag.detail.ScPrice" $  />
                                            <br />
                                        </div>
                                        <div>
                                            <label>ToTal:</label>
                                            <input hidden type="number" value="@ViewBag.detail.Total" $ />
                                        </div>

                                    </form>
                                </div>

                                <!-- /.row (nested) -->
                            </div>
                            <div>
                                <a asp-action="Index">Back to List</a>
                            </div>
                            <!-- /.panel-body -->
                        </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->

</div>
    </div>



